<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="mobi.bar"
      android:versionCode="2"
      android:versionName="1.1">
      <uses-sdk android:minSdkVersion="4" 
              android:targetSdkVersion="11" />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="mobi.bar.activity.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="mobi.bar.activity.WeightActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="mobi.bar.activity.WEIGHT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="mobi.bar.activity.SizeActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="mobi.bar.activity.SIZE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="mobi.bar.activity.TemperatureActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="mobi.bar.activity.TEMPERATURE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="mobi.bar.activity.VolumeActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="mobi.bar.activity.VOLUME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        

    </application>

</manifest> 